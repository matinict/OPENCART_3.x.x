{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
  </div>
    <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> </h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ enter_store_id }}">{{ enter_store_id }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_SSLCommerce_merchant" value="{{ payment_SSLCommerce_merchant }}" />
              {% if error_merchant %}
              <span class="error">{{ error_merchant }}</span>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ entry_store_password }}">{{ entry_store_password }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_SSLCommerce_password" value="{{ payment_SSLCommerce_password }}" />
            </div>
          </div>
            <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_test }}</label>
            <div class="col-sm-10">
              <select name="payment_SSLCommerce_test" class="form-control">
                {% if payment_SSLCommerce_test == 'live' %}
                <option value="live" selected="selected">{{ text_live }}</option>
				
                {% else %}
                <option value="live">{{ text_live }}</option>
               {% endif %}
               {% if payment_SSLCommerce_test == 'successful' %}
                <option value="successful" selected="selected">{{ text_successful }}</option>
                {% else %}
                <option value="successful">{{ text_successful}}</option>
                {% endif %}
              
              </select>
            </div>
          </div>
            
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total">{{ entry_order_status}}</label>
            <div class="col-sm-10">
              <select name="payment_SSLCommerce_order_status_id" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id== payment_SSLCommerce_order_status_id %}
                <option value="{{ order_status.order_status_id}}" selected="selected">{{ order_status.name }}</option>
				
               {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
               {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
            
            
            
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_fail_status }}</label>
            <div class="col-sm-10">
              <select name="payment_SSLCommerce_order_fail_id" class="form-control">
               {% for order_status in order_statuses %}
                 {% if order_status.order_status_id == payment_SSLCommerce_order_fail_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                 {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                 {% endif %}
                 {% endfor %}
              </select>
            </div>
          </div>
          
           <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_risk_status }}</label>
            <div class="col-sm-10">
              <select name="payment_SSLCommerce_order_risk_id" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_SSLCommerce_order_risk_id %}
                <option value="{{ order_status.order_status_id }} " selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }} </option>
                 {% endif %}
                 {% endfor %}
              </select>
            </div>
          </div>
          
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }} </label>
            <div class="col-sm-10">
              <select name="payment_SSLCommerce_geo_zone_id" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
               {% for geo_zone in geo_zones %}
                {% if (geo_zone.geo_zone_id == payment_SSLCommerce_geo_zone_id)%}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
               {% endif %}
                 {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_SSLCommerce_status" class="form-control">
                {% if payment_SSLCommerce_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                 {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_SSLCommerce_sort_order" value="{{ payment_SSLCommerce_sort_order }}" size="1" />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }} 